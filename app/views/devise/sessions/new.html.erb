<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="form-section mt-5 container d-flex align-items-center justify-content-center flex-column">
<div class="form">
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@mail.com" %>
      </div>
    
      <div class="field">
        <%= f.label :password, class: "form-label mt-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions d-flex align-items-center justify-content-center">
        <%= f.submit "LOG IN", class: "btn btn-primary mt-3" %>
      </div>
      <div class="d-flex flex-column align-items-center justify-content-center">
        <%= render "devise/shared/links" %>
      </div>
</div >
</section>
<% end %>


