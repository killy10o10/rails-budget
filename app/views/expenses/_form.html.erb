<%= form_with model: @expense, method: :post, scope: :new_expense do |f|%>
  <section class="form-section mt-5 d-flex flex-column align-items-center justify-content-center">
  
    <div class="form">
        <div class="field">
        <%= f.label :name, class: "form-label"%>
          <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: 'Transaction name', required: true %>
        </div>
      
        <div class="field">
          <%= f.label :amount, class: "mt-2 form-label" %>
          <%= f.number_field :amount,  class: "form-control", autofocus: true, placeholder: 'Amount ($)', required: true %>
        </div>

        <div class="field">
          <%= f.fields_for :expense_categories do |cp| %>
            <%= cp.label :category_ids, 'Select category (at least one)', class: 'form-label mt-2' %> <br>
            <%= cp.collection_select :category_ids, @categories, :id, :name, {}, { multiple: true, required: true, class: "dropdown", size: 2 } %>
          <% end %>
        </div>
      
        <div class="d-flex align-items-center gap-3 justify-content-center">
          <%= f.submit "CREATE TRANSACTION", class: "btn btn-warning mt-3" %>
          <%= link_to "BACK TO CATEGORY", :back, class: "btn btn-secondary mt-3"%>
        </div>
    </div>
  </section>
<% end %>

